<?xml version="1.0" encoding="utf-8"?>
<cn.cst.iov.app.widget.TitleCommonLayout android:id="@+id/common_head_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="44dp"
    android:background="@color/bg_common_header">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="15dp">

        <ImageButton
            android:id="@id/header_left_icon"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@null"
            android:visibility="gone" />

        <TextView
            android:id="@id/header_left_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:drawableLeft="@drawable/selector_back"
            android:drawablePadding="5dp"
            android:gravity="center_vertical"
            android:textColor="@color/txt_color_header_title"
            android:textSize="16dp"
            android:visibility="gone" />

        <TextView
            android:id="@id/header_left_sub_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:textColor="@color/txt_color_header_title"
            android:textSize="16dp"
            android:visibility="gone" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/header_center_title_layout"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@id/header_center_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/txt_color_header_title"
            android:textSize="18dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/header_right_title_layout"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingRight="10dp">

        <ImageButton
            android:id="@id/header_right_sub_icon"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@null"
            android:paddingRight="15dp"
            android:visibility="gone" />

        <ImageButton
            android:id="@id/header_right_icon"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@null"
            android:visibility="gone" />

        <TextView
            android:id="@id/header_right_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:textColor="@color/txt_color_header_title"
            android:textSize="16dp"
            android:visibility="gone" />

        <ImageView
            android:id="@id/header_right_dot_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="-5dp"
            android:layout_marginTop="-10dp"
            android:src="@drawable/ic_tip_red_dot"
            android:visibility="gone" />

    </LinearLayout>

</cn.cst.iov.app.widget.TitleCommonLayout>